{
  "openapi": "3.0.0",
  "info": {
    "title": "Switch Control API",
    "description": "API for controlling multiple switches",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://virtserver.swaggerhub.com/NAIKVJ97_1/switch/1.0.0",
      "description": "SwaggerHub API Auto Mocking"
    }
  ],
  "paths": {
    "/switches": {
      "post": {
        "summary": "Add new switches",
        "description": "Add new switches with a name and initial state",
        "requestBody": {
          "description": "Switches to add",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "state": {
                      "type": "string",
                      "enum": ["on", "off"]
                    }
                  },
                  "required": ["name", "state"]
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Switches successfully added"
          },
          "400": {
            "description": "Invalid request payload"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "get": {
        "summary": "Get all switches",
        "description": "Get a list of all switches",
        "responses": {
          "200": {
            "description": "List of switches",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "state": {
                        "type": "string",
                        "enum": ["on", "off"]
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/switches/{name}": {
      "put": {
        "summary": "Toggle switch",
        "description": "Turn a switch on or off by name",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "description": "Name of the switch",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "New state of the switch",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "state": {
                    "type": "string",
                    "enum": ["on", "off"]
                  }
                },
                "required": ["state"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Switch successfully toggled"
          },
          "400": {
            "description": "Invalid request payload"
          },
          "404": {
            "description": "Switch not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}