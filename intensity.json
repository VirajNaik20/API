{
  "openapi": "3.0.0",
  "info": {
    "title": "Light Control API",
    "description": "API for controlling the intensity of multiple lights",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://example.com/lightcontrol",
      "description": "Production server"
    }
  ],
  "paths": {
    "/lights": {
      "get": {
        "summary": "List all lights",
        "description": "Returns a list of all the lights added to the system",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer",
                        "description": "ID of the light"
                      },
                      "name": {
                        "type": "string",
                        "description": "Name of the light"
                      },
                      "intensity": {
                        "type": "integer",
                        "description": "Current intensity of the light (0-100)"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Add a new light",
        "description": "Adds a new light to the system",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Name of the new light"
                  }
                },
                "required": ["name"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Light successfully added",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "description": "ID of the new light"
                    },
                    "name": {
                      "type": "string",
                      "description": "Name of the new light"
                    },
                    "intensity": {
                      "type": "integer",
                      "description": "Current intensity of the new light (0-100)"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request payload"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/lights/{lightId}/intensity": {
      "put": {
        "summary": "Set light intensity",
        "description": "Sets the intensity of the specified light",
        "parameters": [
          {
            "name": "lightId",
            "in": "path",
            "description": "ID of the light to set the intensity for",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "intensity": {
                    "type": "integer",
                    "description": "The new intensity to set for the light (0-100)"
                  }
                },
                "required": ["intensity"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Light intensity updated successfully"
          },
          "400": {
            "description": "Invalid input, e.g. invalid light ID or intensity value"
          },
          "404": {
            "description": "Light not found for the given ID"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}
        
  
